#!/bin/bash
. /usr/local/lib/gce-funcs

if test -z "$HOOK_ARG"	# prevent recursion
then
    run_hooks logger "$*"
fi

status=$(echo "$*" | sed -e 's/^run xfstest //')
if echo "$*" | grep -q "^run xfstest "
then
    # /root/xfstests/bin/syncfs $RESULT_BASE/completed
    # /root/xfstests/bin/syncfs /var/tmp

    # sync completed file
    echo "$status" >> $RESULT_BASE/completed
    /root/xfstests/bin/xfs_io -c "fsync" $RESULT_BASE/completed
    echo "xfs_io fsync completed returned $?" >> /results/status-append

    # sync completed file's dir in case it this file was just created
    /root/xfstests/bin/xfs_io -c "fsync" $RESULT_BASE
    echo "xfs_io fsync RESULT_BASE returned $?" >> /results/status-append
    cat "$RESULT_BASE/completed" >> /results/status-append

    # sync temporary results file
    ls /var/tmp/*report.xunit.global.xml 2>/dev/null | xargs -r /root/xfstests/bin/xfs_io -c "fsync"

    # sync temporary results file's dir
    /root/xfstests/bin/xfs_io -c "fsync" /var/tmp
    echo "xfs_io fsync /var/tmp returned $?" >> /results/status-append
fi

if test -f /run/fstest-config
then
    cfg="$(cat /run/fstest-config)"
    status="$cfg $status"
fi

echo "status=$(date +%H:%M) $status" >> /results/status-append

if test -z "$(find /run/last_logged -mmin -1 -print 2> /dev/null)"
then
    /usr/local/lib/gce-add-metadata "status=$(date +%H:%M) $status"
    echo "add-metadata retunred $?" >> /results/status-append
    touch /run/last_logged
else
    echo "did not add metadata" >> /results/status-append
fi

umask 022
echo $(date +%s) "$status" > /var/www/statusz
echo $(date +%H:%M) "$status" > /var/www/status
echo "$status" > /results/status
/root/xfstests/bin/syncfs /results/status
logger $cfg "$*"
